@model IEnumerable<UniversityManagementSystem.Models.Staff>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int intCount = 0;

}

<br />
<br />
<h3 style="text-align:center; font-size: 26px; font-family: serif;">List of staffs</h3>
<br />
<br />

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead style="font-size: 17px; font-family: serif;">
        <tr style="text-align:center;">
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffRole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationality)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    intCount = intCount +1;
        <tr style="font-size: 16px; font-family: serif; text-align:center;">
            <td>
                @intCount
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffRole)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Branch.BranchName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality.NationalityName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StaffId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StaffId">Details</a> |
                <form asp-action="Delete" asp-route-id="@item.StaffId" style="display: contents;" method="post"> 
                    <button type="submit" class="btn btn-danger" onclick="return functionConfirm(event)">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/swal.js"></script>
}