@model IEnumerable<UniversityManagementSystem.Models.Staff>

@{
    int intCount = 0;
}

<table class="table" style="font-size:15px">
     <thead class="thead-dark">
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffRole)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Image)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaredJob)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationality)
            </th>*@
            <th style="text-align:center">Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
     intCount = intCount + 1;
        <tr>
            <td>
                @intCount
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffRole)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaredJob)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Branch.BranchId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality.NationalityId)
            </td>*@
          <td style="padding: 3px;font-size:13px;text-align:center">
                    <div class="btn-group">
                        <a onclick="showInPopup('@Url.Action("AddOrEdit","Staffs",new { id = item.StaffId },Context.Request.Scheme)',' Edit')" class="butoni tooltipi btn btn-primary" style="color:white;margin-right: 7px;border-radius: 0px;width:90px;font-size:15px">
                            <span class="tooltipitext">Change</span>
                        </a><br>
                        <!--DELETE-->
                        <a asp-action="Details" asp-route-id="@item.StaffId" class="butoni tooltipi btn btn-info" style="color:white;margin-right: 7px;border-radius: 0px;width:90px;font-size:15px">Details</a>
                        <form asp-action="Delete" asp-route-id="@item.StaffId" method="post">
                            <button type="submit" class="butoni tooltipi btn btn-danger" onclick="return functionConfirm(this)" style="color:white;border-radius: 0px;width:90px;font-size:15px">
                               <span class="tooltipitext">Delete</span>
                            </button>
                        </form>
                    </div>
         </td>
        </tr>
}
    </tbody>
</table>
