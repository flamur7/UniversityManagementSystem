@model UniversityManagementSystem.Models.Professor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Professor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProfessorId" />
            <div class="form-group">
                <label asp-for="ProfessorName" class="control-label"></label>
                <input asp-for="ProfessorName" class="form-control" />
                <span asp-validation-for="ProfessorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessorSurname" class="control-label"></label>
                <input asp-for="ProfessorSurname" class="form-control" />
                <span asp-validation-for="ProfessorSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProffessorTitle" class="control-label"></label>
                <input asp-for="ProffessorTitle" class="form-control" />
                <span asp-validation-for="ProffessorTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" type="file"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NationalityId" class="control-label"></label>
                <select asp-for="NationalityId" class="form-control" asp-items="ViewBag.NationalityId"></select>
                <span asp-validation-for="NationalityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="col-4"></div>
            <div class="col-6">
            <img src="~/@Model.Image" width="300px" height="290px" style="border-radius: 5px;border: 1px solid #efefef" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
