@model IEnumerable<UniversityManagementSystem.Models.Nationality>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int intCount = 0;
}




<div class="wrapper">
        <!-- Sidebar  -->
        <div class="flex-container">
        <nav id="sidebar" style="height:100%;    background-color: #9b175a;">
            <div class="sidebar-header" style=" background-color: #9b175a;">
                <h3>Administrator Dashboard</h3>
            </div>

            <ul class="list-unstyled components" style=" background-color: #9b175a;">
               
                <li class="active" style="border: 0.5px solid white">
                    <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">University Details</a>
                    <ul class="collapse list-unstyled" id="homeSubmenu">
                        <li>
                            <a asp-controller="Grades" asp-action="Index">Grades</a>
                        </li>
                        <li>
                            <a asp-controller="Branches" asp-action="Index">Branches</a>
                        </li>
                        <li>
                           <a asp-controller="Nationalities" asp-action="Index">Nationality</a>
                        </li>
                        <li>
                           <a asp-controller="ProgramUniversities" asp-action="Index">Program</a>
                        </li>
                    </ul>
                </li>
                <li style="border: 0.5px solid white">
                    <a asp-controller="User" asp-action="Index">User List</a>
                </li><li style="border: 0.5px solid white">
                    <a asp-controller="Role" asp-action="Index">Role List</a>
                </li>
                <li class="active" style="border: 0.5px solid white">
                    <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Assign Roles</a>
                    <ul class="collapse list-unstyled" id="pageSubmenu">
                        <li>
                             <a asp-controller="Role" asp-action="Assign">Assign</a>
                        </li><li>
                             <a asp-controller="Role" asp-action="AssignUserRole">Assign List</a>
                        </li>
                    </ul>
                </li>
                @*<li>
                    <a href="#">Portfolio</a>
                </li>
                <li>
                    <a href="#">Contact</a>
                </li>*@
            </ul>
        </nav>
        </div>
        <!-- Page Content  -->
        <div id="content">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-success">
                        <i class="fas fa-align-left"></i>
                        <span></span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                               <a asp-controller="Nationalities" asp-action="Create" class="btn btn-success">New Nationality</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

           <table class="table" style="font-size:15px">
     <thead class="thead-dark">
        <tr style="text-align:center;">
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NationalityName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    intCount = intCount + 1;
        <tr style="font-size: 16px; font-family: serif; text-align:center;">
            <td>
                @intCount
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NationalityName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.NationalityId">Edit</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.NationalityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table></div>
    </div>











@section Scripts{
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	
    <script src="~/js/adminss.js"></script>
}

