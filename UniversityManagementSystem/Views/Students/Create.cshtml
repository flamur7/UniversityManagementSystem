@model UniversityManagementSystem.Models.Student

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-center mt-200"> <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"> New Student + </button> </div> <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background: black; color: white;">
                    <h5 class="modal-title" id="exampleModalLabel">Add Student</h5> <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:white"> <span aria-hidden="true">&times;</span> </button>
                </div>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="modal-body">
                        <div id="smartwizard">
                            <div class="mt-4" >
                                <div id="step-1">
                                    <div class="row">
                                        <div class="col-md-6" > <input type="number" asp-for="PersonalNumber" class="form-control" placeholder="Personal Number" required style="border: 1px solid black"> 
                                                                <span asp-validation-for="PersonalNumber" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6"> <input type="email" asp-for="Email" class="form-control" placeholder="Email" required style="border: 1px solid black"> 
                                                                <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-md-6"> <input type="text" asp-for="StudentName" class="form-control" placeholder="Student Name" required style="border: 1px solid black">
                                                                <span asp-validation-for="StudentName" class="text-danger"></span>    
                                        </div>
                                        <div class="col-md-6"> <input type="text" asp-for="ParentName" class="form-control" placeholder="Parent Name" required style="border: 1px solid black"> 
                                                                <span asp-validation-for="ParentName" class="text-danger"></span>     
                                        </div>
                                    </div>
                                </div>
                                <div id="step-2">
                                    <div class="row">
                                        <div class="col-md-6"> <input type="text" asp-for="Surname" class="form-control" placeholder="Surname" required style="border: 1px solid black; border-top: white"> </div>
                                        <div class="col-md-6">  <input asp-for="Image" class="form-control" type="file" accept="Images/*"  required style="border: 1px solid black; border-top: white"/> </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-md-6"> <input type="text" asp-for="Birthplace" class="form-control" placeholder="Birthplace" required style="border: 1px solid black"> </div>
                                        <div class="col-md-6"> <input type="date" asp-for="Birthday" class="form-control" placeholder="Birthday" required style="border: 1px solid black"> </div>
                                    </div>
                                </div>
                                <div id="step-3">
                                    <div class="row">
                                        @*//Per me shtu inpute ne form*@
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-md-6"> <label asp-for="BranchId" class="control-label"></label>
                                                               <select asp-for="BranchId" class ="form-control" asp-items="ViewBag.BranchId" style="border: 1px solid black"></select> </div>
                                        <div class="col-md-6"> <label asp-for="ProgramUniversityId" class="control-label"></label>
                                                                <select asp-for="ProgramUniversityId" class ="form-control" asp-items="ViewBag.ProgramUniversityId" style="border: 1px solid black" ></select> </div>
                                    </div>
                                </div>
                                <div id="step-4">
                                    <div class="row mt-3">
                                        <div class="col-md-6">  <label asp-for="NationalityId" class="control-label"></label>
                                                                <select asp-for="NationalityId" placeholder="Card Number" class ="form-control" asp-items="ViewBag.NationalityId" style="border: 1px solid black"></select> </div>
                                        
                                    </div>
                                </div>
                                <br /><div id="step-5" class="">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                  </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

