@model IEnumerable<UniversityManagementSystem.Models.Student>

@{
    int intCount = 0;
    int intStudent = 222345678;
}

<table class="table" style="font-size:15px">
    <thead class="thead-dark">
        <tr>
            <th>
                #
            </th>
            <th>
                Student ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthplace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProgramUniversity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>*@
            <th style="text-align:center">Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    intCount = intCount + 1;
    intStudent = intStudent + item.StudentId;
        <tr>
            <td>
                @intCount
            </td>
            <td>
                @intStudent
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonalNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
@*            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthplace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramUniversity.ProgramUniversityId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality.NationalityId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch.BranchId)
            </td>*@
             <td style="padding: 3px;font-size:13px;text-align:center">
                    <div class="btn-group">
                        <a onclick="showInPopup('@Url.Action("AddOrEdit","Students",new { id = item.StudentId },Context.Request.Scheme)',' Edit')" class="butoni tooltipi btn btn-primary" style="color:white;margin-right: 7px;border-radius: 0px;width:90px;font-size:15px">
                            <span class="tooltipitext">Change</span>
                        </a><br>
                        <!--DELETE-->
                        <a asp-action="Details" asp-route-id="@item.StudentId" class="butoni tooltipi btn btn-info" style="color:white;margin-right: 7px;border-radius: 0px;width:90px;font-size:15px">Details</a>
                        <form asp-action="Delete" asp-route-id="@item.StudentId" method="post">
                            <button type="submit" class="butoni tooltipi btn btn-danger" onclick="return functionConfirm(this)" style="color:white;border-radius: 0px;width:90px;font-size:15px">
                               <span class="tooltipitext">Delete</span>
                            </button>
                        </form>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
